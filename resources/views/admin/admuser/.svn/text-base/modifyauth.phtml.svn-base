function forbidden(aid,uid)
{
	var yes = confirm("是否删除此项权限？");
		if(yes === true)
		{
		$.ajax({
		   type: "POST",
		   url: "/auth/delauth/",
		   data: {'id':aid,'uid':uid},
		   dataType:"json",
		   cache: false,
		   success: function(data){
			 if(data.code=="succ")
			 {
				$("#m_"+aid).remove();
			 }
		   }
		});
		}
}
