<script>

function goPage(p,max)
{
	var r = /^[1-9]\d*$/;
	if(!(r.test(p)))
	{
		alert('请输入一个大于0的整数');
		return;
	}
	if(max-0<p-0)
	{
		alert('不能大于总页数');
		return;
	}
	if(document.getElementById("curr_page"))
	{
		var url = document.getElementById("curr_page").getAttribute("url");
		url = url.replace(/cp=(\d+)/,"cp="+p);
		window.location.href = url;
	}
}

</script>
